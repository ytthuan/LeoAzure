{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/leoRXSubscriber.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/leoRXSubscriber.csproj"
            ],
            "problemMatcher": "$tsc"
        },

        {
            "label": "deploy",
            "command": "scp",
            "type": "shell",
            "args": [
                "${workspaceFolder}/bin/Debug/netcoreapp2.2/publish/*",
                "admin2019@linuxremotedebug.eastasia.cloudapp.azure.com:/home/admin2019/sub"
            ],
            "dependsOn": [
                "publish"
            ]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/leoRXSubscriber.csproj"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}